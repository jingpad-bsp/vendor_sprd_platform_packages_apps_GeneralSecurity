<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="header">
        <item name="android:textSize">64sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>


    <style name="CustomTheme"  parent="android:Theme.Material.Light">
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="CustomActionBarStyle" parent="@android:style/Widget.Toolbar">
        <item name="android:displayOptions">showTitle</item>
    </style>

    <!-- SPRD: Bug704824 add tab for dual sim card mode -->
    <style name="DataFlowSettingTheme"  parent="android:Theme.Material.Light">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
    </style>
</resources>
